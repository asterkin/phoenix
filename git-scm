#!/bin/bash
#TODO: protect against double configuration of git
#TODO: automatically detect user.name and user.mail or at lest ensure all args are supplied in command line

apt-get -q -y update
apt-get -q -y upgrade
apt-get -y install git-core
apt-get -y install gitk
git config --global --add user.name "$1"
git config --global --add user.email "$2"
git config --global --list

